{
  "name": "es6-api-starter",
  "version": "1.0.0",
  "description": "A starter app for an API using ES6",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon -w src --exec \"babel-node src\"",
    "build": "babel src -s -D -d built",
    "prestart": "npm run -s build",
    "api": "nodemon built/index.js",
    "api-test": "npm run test && NODE_ENV=test nodemon built/index.js",
    "test": "NODE_ENV=test mocha built/test --opts built/test/mocha.opts"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^0.8.7",
    "bluebird": "^3.4.2",
    "body-parser": "^1.15.2",
    "cors": "^2.7.1",
    "express": "^4.14.0",
    "jsonwebtoken": "^7.1.9",
    "mongodb": "^2.2.8",
    "mongoose": "^4.5.9"
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-polyfill": "^6.13.0",
    "babel-preset-es2015": "^6.13.2",
    "chai": "^3.5.0",
    "chai-http": "^3.0.0",
    "chai-spies": "^0.7.1",
    "jshint": "^2.9.3",
    "mocha": "^3.1.0",
    "node-mocks-http": "^1.5.4",
    "nodemon": "^1.10.2",
    "typings": "^1.4.0"
  }
}
